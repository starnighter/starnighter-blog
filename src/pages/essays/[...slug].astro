---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import NeuralBackground from '../../components/NeuralBackground.vue';

export async function getStaticPaths() {
  const essays = await getCollection('essays');
  return essays.map(essay => ({
    params: { slug: essay.slug },
    props: { essay },
  }));
}

type Props = {
  essay: CollectionEntry<'essays'>;
};

const { essay } = Astro.props;
const { Content } = await essay.render();

// 格式化日期函数
const formatDate = (date: Date) => {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: '2-digit', day: '2-digit' };
  return date.toLocaleDateString('zh-CN', options).replace(/\//g, '-');
};
---

<MainLayout title={essay.data.title}>
  <NeuralBackground client:only="vue" />

  <div class="essay-detail-wrapper">
    <header class="essay-header">
      <h1 class="essay-title">{essay.data.title}</h1>
      <div class="essay-meta">
        <time>{formatDate(essay.data.pubDate)}</time>
        {essay.data.tag && <span class="tag">{essay.data.tag}</span>}
      </div>
      {essay.data.description && <p class="essay-description">{essay.data.description}</p>}
    </header>

    <hr class="divider" />

    <article class="essay-content astro-entry">
      <Content />
    </article>

    <nav class="post-footer">
      <a href="/essays" class="back-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
        返回随笔列表
      </a>
    </nav>
  </div>
</MainLayout>

<style>
  .essay-detail-wrapper {
    position: relative;
    z-index: 1;
    max-width: 760px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
    background: rgba(var(--color-bg-rgb), 0.7);
    backdrop-filter: blur(8px);
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    border: 1px solid rgba(var(--color-border), 0.5);
  }

  .essay-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .essay-title {
    font-size: 2.4rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
  }

  .essay-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  .essay-meta .tag {
    background-color: var(--color-bg-secondary);
    padding: 0.2rem 0.7rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
    font-size: 0.8rem;
    color: var(--color-accent);
  }

  .essay-description {
    font-style: italic;
    color: var(--color-text-secondary);
    margin-top: 1rem;
    line-height: 1.6;
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
  }

  .divider {
    border: 0;
    height: 1px;
    background: var(--color-border);
    margin: 3rem 0;
    opacity: 0.5;
  }

  .essay-content {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .post-footer {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
  }

  .back-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.5rem;
    border-radius: 99px;
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.2s ease;
    border: 1px solid var(--color-border);
  }

  .back-btn:hover {
    background-color: var(--color-bg-mute);
    color: var(--color-text-primary);
    transform: translateX(-3px);
  }

  @media (max-width: 600px) {
    .essay-detail-wrapper {
      padding: 2rem 1rem;
    }
    .essay-title {
      font-size: 2rem;
    }
  }
</style>