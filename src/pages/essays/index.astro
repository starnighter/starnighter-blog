---
import MainLayout from "../../layouts/MainLayout.astro";
import NeuralBackground from "../../components/NeuralBackground.vue";
import { getCollection } from 'astro:content';

const allEssays = await getCollection('essays');

allEssays.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

const formatDate = (date: Date) => {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: '2-digit', day: '2-digit' };
  return date.toLocaleDateString('zh-CN', options).replace(/\//g, '-');
};
---

<MainLayout title="随笔">
  <NeuralBackground client:only="vue" />

  <div class="essays-container">
    <header class="page-header">
      <h1 class="glitch-text" data-text="思维碎片 / ESSAYS">思维碎片 / ESSAYS</h1>
      <p class="subtitle">记录稍纵即逝的灵感与思考</p>
    </header>

    <div class="timeline">
      {allEssays.length === 0 ? (
        <p class="no-essays">目前还没有随笔，敬请期待...</p>
      ) : (
        allEssays.map((essay, index) => (
          <a href={`/essays/${essay.slug}`} class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-date">{formatDate(essay.data.pubDate)}</div>
            <div class="timeline-content card-glass">
              <div class="card-header">
                <h3>{essay.data.title}</h3>
                {essay.data.tag && <span class="tag">{essay.data.tag}</span>}
              </div>
              <p>{essay.data.description || '点击查看详情...'}</p>
            </div>
          </a>
        ))
      )}
    </div>
  </div>
</MainLayout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // 封装动画初始化逻辑
  function initAnimations() {
    // 清理旧的 ScrollTriggers，防止页面切换后旧的触发器残留导致冲突或内存泄漏
    ScrollTrigger.getAll().forEach(t => t.kill());

    const tl = gsap.timeline();

    // 标题入场动画
    const header = document.querySelector(".page-header");
    if (header) {
      gsap.fromTo(header,
        { y: -50, opacity: 0 },
        { y: 0, opacity: 1, duration: 1, ease: "power3.out" }
      );
    }

    // 卡片滚动动画
    const items = document.querySelectorAll(".timeline-item");
    items.forEach((item, i) => {
      const xOffset = i % 2 === 0 ? -100 : 100;

      gsap.set(item, { opacity: 0, x: xOffset });

      gsap.to(item, {
        opacity: 1,
        x: 0,
        duration: 0.8,
        ease: "power3.out",
        scrollTrigger: {
          trigger: item,
          start: "top 85%",
          end: "top 15%",
          toggleActions: "play none none reverse",
        }
      });
    });

    ScrollTrigger.refresh();
  }

  document.addEventListener('astro:page-load', initAnimations);

</script>

<style>
  /* 容器布局 */
  .essays-container {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
    min-height: calc(100vh - var(--header-height) - var(--footer-height));
  }

  /* 头部样式 */
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .glitch-text {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-text-primary);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .subtitle {
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }

  .no-essays {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    margin-top: 5rem;
  }

  /* 时间轴样式 */
  .timeline {
    position: relative;
    padding: 2rem 0;
  }

  /* 中轴线 */
  .timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, transparent, var(--color-accent), transparent);
    transform: translateX(-50%);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 3rem;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    color: inherit;
    opacity: 0;
  }

  .timeline-item:nth-child(odd) {
    flex-direction: row-reverse;
  }

  .timeline-content {
    width: 42%;
    padding: 1.5rem;
    border-radius: 12px;
    position: relative;
    transition: transform 0.3s ease, border-color 0.3s;
    cursor: pointer;
  }

  .timeline-item:nth-child(odd) .timeline-content {
    margin-right: auto;
    text-align: right;
  }

  .timeline-item:nth-child(even) .timeline-content {
    margin-left: auto;
    text-align: left;
  }

  .card-glass {
    background: rgba(var(--color-bg-rgb), 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--color-border), 0.5);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .timeline-item:hover .timeline-content {
    transform: translateY(-5px);
    border-color: var(--color-accent);
  }

  .timeline-dot {
    width: 16px;
    height: 16px;
    background: var(--color-accent);
    border-radius: 50%;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    border: 4px solid var(--color-bg);
    z-index: 2;
    box-shadow: 0 0 10px var(--color-accent);
  }

  .timeline-date {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -25px;
    font-size: 0.85rem;
    font-family: monospace;
    color: var(--color-text-secondary);
    background: var(--color-bg);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
    z-index: 3;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.8rem;
  }

  .timeline-item:nth-child(odd) .card-header {
    flex-direction: row-reverse;
  }

  .card-header h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--color-text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
    flex: 1;
  }

  .tag {
    font-size: 0.7rem;
    padding: 0.1rem 0.5rem;
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
    border-radius: 4px;
  }

  .timeline-content p {
    margin: 0;
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .timeline::before {
      left: 20px;
    }

    .timeline-item {
      flex-direction: row !important;
      justify-content: flex-start;
      padding-left: 40px;
    }

    .timeline-dot {
      left: 20px;
    }

    .timeline-date {
      position: static;
      transform: none;
      margin-bottom: 0.5rem;
      display: inline-block;
    }

    .timeline-content {
      width: 100%;
      text-align: left !important;
      margin: 0 !important;
    }

    .card-header {
      flex-direction: row !important;
    }
  }
</style>