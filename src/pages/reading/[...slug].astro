---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const books = await getCollection('books');
  return books.map(book => ({
    params: { slug: book.slug },
    props: { book },
  }));
}

type Props = {
  book: CollectionEntry<'books'>;
};

const { book } = Astro.props;
const { Content } = await book.render();
---

<MainLayout title={book.data.title}>
  <div class="book-detail-wrapper">
    <header class="book-header">

      <div class="header-content">
        {book.data.cover && (
          <div class="detail-cover">
            <img src={book.data.cover} alt={book.data.title} />
          </div>
        )}

        <div class="header-info">
          <h1 class="book-title">{book.data.title}</h1>

          <div class="book-meta">
            <div class="meta-item">
              <span class="label">作者</span>
              <span class="value">{book.data.author}</span>
            </div>
            <div class="meta-item">
              <span class="label">类型</span>
              <span class="value badge">{book.data.genre}</span>
            </div>
            <div class="meta-item">
              <span class="label">推荐时间</span>
              <time class="value">{book.data.pubDate.toLocaleDateString('zh-CN')}</time>
            </div>
          </div>

          <div class="book-quote">
            <blockquote>
              <p>“ {book.data.comment} ”</p>
            </blockquote>
          </div>
        </div>
      </div>

    </header>

    <hr class="divider" />

    <article class="book-content astro-entry">
      <Content />
    </article>

    <nav class="post-footer">
      <a href="/reading" class="back-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
        返回书架
      </a>
    </nav>
  </div>
</MainLayout>

<style>
  .book-detail-wrapper {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .book-header {
    margin-bottom: 3rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    text-align: left;
  }

  .detail-cover {
    flex-shrink: 0;
    width: 160px;
    height: 230px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    background-color: #eee;
    border: 4px solid var(--color-bg-secondary);
  }

  .detail-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .header-info {
    flex: 1;
    max-width: 500px;
  }

  .book-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .book-meta {
    display: flex;
    justify-content: flex-start;
    gap: 2rem;
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.2rem;
  }

  .meta-item .label {
    font-size: 0.8rem;
    text-transform: uppercase;
    opacity: 0.6;
    letter-spacing: 0.05em;
  }

  .meta-item .value {
    font-weight: 500;
    color: var(--color-text-primary);
  }

  .badge {
    background-color: var(--color-bg-secondary);
    padding: 0.1rem 0.6rem;
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  .book-quote blockquote {
    margin: 0;
    max-width: 100%;
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-accent);
    font-style: italic;
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border-radius: 12px;
    border-left: 4px solid var(--color-accent);
  }

  .book-quote p {
    margin: 0;
  }

  .divider {
    border: 0;
    height: 1px;
    background: var(--color-border);
    margin: 2rem 0 3rem;
    opacity: 0.5;
  }

  .book-content {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .post-footer {
    margin-top: 4rem;
    display: flex;
    justify-content: center;
  }

  .back-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.5rem;
    border-radius: 99px;
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.2s ease;
    border: 1px solid var(--color-border);
  }

  .back-btn:hover {
    background-color: var(--color-bg-mute);
    color: var(--color-text-primary);
    transform: translateX(-3px);
  }

  /* 移动端适配 */
  @media (max-width: 700px) {
    .header-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .book-title {
      font-size: 2rem;
    }

    .book-meta {
      justify-content: center;
    }

    .meta-item {
      align-items: center;
    }

    .detail-cover {
      width: 140px;
      height: 200px;
    }
  }
</style>